<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.model.activities.OptionsMascarade"
    android:background="@android:drawable/dark_header"
    android:weightSum="1">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="45"
        android:columnCount="2"
        android:orientation="vertical"
        android:id="@+id/layoutoptions"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="MASCARADE"
            android:id="@+id/mascarade_options_title"
            android:layout_gravity="center_horizontal"
            android:textColor="#6b0103"
            android:textSize="50dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginBottom="20dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Choisir le nombre de joueurs"
            android:id="@+id/textView_nbPlayers"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            android:layout_row="2"
            android:layout_column="1" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/spinner_nb_players"
            android:spinnerMode="dropdown"
            android:background="#ffffff"
            android:layout_row="18"
            android:layout_column="1"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Indiquez votre pseudo"
            android:id="@+id/textView_pseudo"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            android:layout_row="41"
            android:layout_column="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Pseudo"
            android:ems="10"
            android:id="@+id/editText_pseudo"
            android:layout_row="42"
            android:layout_column="1"
            android:background="#ffffff" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:text="Commencer"
            android:id="@+id/button_start"
            android:layout_row="44"
            android:layout_column="1" />
    </GridLayout>

</LinearLayout>