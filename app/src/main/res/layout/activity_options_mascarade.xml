<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.model.activities.OptionsMascarade"
    android:background="@drawable/fond_mascarade"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MASCARADE"
        android:id="@+id/mascarade_options_title"
        android:layout_gravity="center_horizontal"
        android:textColor="#a9342a"
        android:textSize="50dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginBottom="20dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choisir le nombre de joueurs"
        android:id="@+id/textView_nbPlayers"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_margin="10dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/spinner_nb_players"
        android:spinnerMode="dropdown"
        android:background="#ffffff"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_marginBottom="20dp"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Indiquez votre pseudo"
        android:id="@+id/textView_pseudo"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:layout_row="41"
        android:layout_column="1"
        android:layout_margin="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Pseudo"
        android:ems="10"
        android:id="@+id/editText_pseudo"
        android:layout_row="42"
        android:layout_column="1"
        android:background="#ffffff"
        android:layout_margin="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="43"
        android:layout_column="1"
        android:layout_margin="10dp">

        <Button
            android:background="@drawable/button_rounded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commencer"
            android:id="@+id/button_start"
            android:layout_row="44"
            android:layout_column="1"
            android:layout_weight="0.5"
            android:layout_marginRight="30dp" />

        <Button
            android:background="@drawable/button_rounded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retour"
            android:id="@+id/button_return"
            android:layout_row="44"
            android:layout_column="1"
            android:layout_gravity="right"
            android:layout_weight="0.5"
            android:layout_marginLeft="30dp" />
    </LinearLayout>

</LinearLayout>