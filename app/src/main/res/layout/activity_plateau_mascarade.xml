<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="104dp"
        android:layout_height="328dp"
        android:id="@+id/linearLayout_roles_actions"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#e1dbdb">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:id="@+id/linearLayout_bloc_roles"
            android:layout_marginBottom="5dp"
            android:gravity="fill_vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Roles en jeu"
                android:id="@+id/textView_roles_game"
                android:background="#e5b13f"
                android:textSize="15dp"
                android:textAlignment="center"
                android:gravity="center_vertical" />


            <ListView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:divider="@android:color/transparent"
                android:dividerHeight="0sp"
                android:id="@+id/listView_roles_game"
                android:choiceMode="none"
                android:layout_margin="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="fill_vertical"
            android:id="@+id/linearLayout_bloc_actions"
            android:weightSum="1"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actions"
                android:id="@+id/textView_action"
                android:background="#bdff87"
                android:textSize="15dp"
                android:textAlignment="center"
                android:autoText="false"
                android:layout_gravity="top"
                android:gravity="top|fill_vertical"
                android:layout_marginBottom="0dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout_actions"
                android:gravity="fill_vertical"
                android:padding="0dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:text="Echanger (ou non) sa carte"
                    android:id="@+id/button_changeCard"
                    android:layout_centerHorizontal="true"
                    android:textSize="10dp"
                    android:background="#325a17"
                    android:gravity="fill_vertical"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="0dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:text="Annoncer sa carte"
                    android:id="@+id/button_announceCard"
                    android:layout_centerHorizontal="true"
                    android:textSize="10dp"
                    android:background="#325a17"
                    android:gravity="fill_vertical"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:layout_marginTop="5dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Regarder sa carte"
                    android:id="@+id/button_seeCard"
                    android:layout_centerHorizontal="true"
                    android:textSize="10dp"
                    android:background="#325a17"
                    android:layout_gravity="bottom"
                    android:gravity="fill_vertical"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:layout_marginTop="5dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>