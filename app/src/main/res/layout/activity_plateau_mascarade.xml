<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_mascarade">

    <LinearLayout
        android:layout_column="1"
        android:orientation="vertical"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout_roles_actions"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:weightSum="1">



        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout_bloc_roles"
            android:layout_marginBottom="5dp"
            android:gravity="fill_vertical"
            android:layout_marginTop="10dp"
            android:background="#64e5b13f">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rôles en jeu"
                android:id="@+id/textView_roles_game"
                android:textSize="15dp"
                android:textAlignment="center"
                android:autoText="false"
                android:layout_gravity="top"
                android:gravity="top|fill_vertical"
                android:layout_marginBottom="0dp"
                />

            <ListView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:divider="@android:color/transparent"
                android:dividerHeight="0sp"
                android:id="@+id/listView_roles_game"
                android:choiceMode="none"
                android:layout_margin="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="fill_vertical"
            android:layout_weight="0.5"
            android:id="@+id/linearLayout_bloc_actions"
            android:weightSum="1"
            android:layout_marginBottom="5dp"
            android:background="#64a9342a">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actions"
                android:id="@+id/textView_action"
                android:textSize="15dp"
                android:textAlignment="center"
                android:autoText="false"
                android:layout_gravity="top"
                android:gravity="top|fill_vertical"
                android:layout_marginBottom="0dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout_actions"
                android:gravity="fill_vertical"
                android:padding="0dp"
                android:layout_margin="5dp"
                android:weightSum="1">

                <Button
                    android:background="@drawable/button_rounded"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Echanger (ou non) sa carte"
                    android:id="@+id/button_changeCard"
                    android:layout_centerHorizontal="true"
                    android:textSize="10dp"
                    android:layout_weight="0.3"
                    android:gravity="fill_vertical"
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp" />

                <Button
                    android:background="@drawable/button_rounded"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Annoncer sa carte"
                    android:layout_weight="0.3"
                    android:id="@+id/button_announceCard"
                    android:layout_centerHorizontal="true"
                    android:textSize="10dp"
                    android:gravity="fill_vertical"
                    android:textAlignment="center"
                    android:layout_marginBottom="5dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/button_rounded"
                    android:text="Regarder sa carte"
                    android:id="@+id/button_seeCard"
                    android:layout_centerHorizontal="true"
                    android:textSize="10dp"
                    android:gravity="fill_vertical"
                    android:textAlignment="center"
                    android:layout_margin="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="bottom" />
                <!--android:background="#a9342a"-->

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_column="3"
            android:id="@+id/linearLayout_info_leave">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="369dp"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout_informations"
                android:gravity="right"
                android:weightSum="1"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:background="#64000000"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:paddingRight="0dp"
                    android:id="@+id/linearLayout_round">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Tour n° : "
                        android:id="@+id/textView_label_round"
                        android:layout_gravity="left"
                        android:textColor="#ffffff"
                        android:paddingBottom="5dp"
                        android:paddingRight="0dp"
                        android:paddingLeft="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView_round"
                        android:paddingBottom="5dp"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_weight="0.3"
                    android:id="@+id/linearLayout_role">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Votre dernier rôle connu : "
                        android:id="@+id/textView_label_last_role_known"
                        android:textColor="#ffffff"
                        android:layout_gravity="left"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:id="@+id/textView_last_role_known"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:id="@+id/linearLayout_gold">
                    <!--android:layout_width="match_parent"-->


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Or  : "
                        android:id="@+id/textView_label_gold"
                        android:textColor="#ffffff"
                        android:layout_gravity="left"
                        android:paddingLeft="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/textView_gold"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Quitter"
                android:background="@drawable/button_leave"
                android:id="@+id/button_leave"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/view_board"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center_horizontal"
                android:id="@+id/linearLayout_firstLine"
                android:layout_margin="5dp">

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center_horizontal"
                android:id="@+id/linearLayout_secondLine" />
            </LinearLayout>

    </LinearLayout>

</LinearLayout>